<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="com.yash.EmpCrudApp.controller.home" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page id="home" showHeader="false">
				<content>
					<Bar class="bar2_class">
						<contentLeft>
							<Title text="{LocalDataModel>/titles/createPhysicalLineItems}" level="H2"/>
						</contentLeft>
						<contentMiddle>
							<Title level="H1" text="Employee Crud App" />
						</contentMiddle>
					</Bar>
					<VBox alignContent="Center" height="95%" justifyContent="Center" alignItems="Center">
						<l:Grid defaultSpan="XL3 L3 M6 S12">
							<GenericTile id="showEmployee" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" tooltip="Show Employees" header="Show" subheader="Employees" press="onPressShowEmp" >
								<TileContent >
									<ImageContent src="sap-icon://show"/>
								</TileContent>
							</GenericTile>
							<GenericTile id="createEmployee" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" tooltip="Create Employees" header="Create" subheader="Employees"  press="onPressCreateEmp">
								<TileContent>
									<ImageContent src="sap-icon://add"/>
								</TileContent>
							</GenericTile>
							<GenericTile id="updateEmployee" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" tooltip="Update Employees" header="Update" subheader="Employees" press="onPressUpdateEmp">
								<TileContent>
									<ImageContent src="sap-icon://edit"/>
								</TileContent>
							</GenericTile>
							<GenericTile id="deleteEmployee" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" tooltip="Delete Employees" header="Delete" subheader="Employees" press="onPressDeleteEmp">
								<TileContent>
									<ImageContent src="sap-icon://delete"/>
								</TileContent>
							</GenericTile>
						</l:Grid>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>