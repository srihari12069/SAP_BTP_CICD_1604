<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.yash.EmpCrudApp.controller.getEmpl"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page id="showEmp" title="Show Employee" showNavButton="true" navButtonPress="backToHome">
				<content>
					<Table id="idsecondTable" inset="false" items="{LocalDataModel>/employyeData}" class="sapUiLargeMarginTop">
						<columns>
							<Column >
								<Text text="Employee Id"/>
							</Column>
							<Column >
								<Text text="Employee Name"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
								<Text text="Gender"/>
							</Column>
							<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
								<Text text="Age"/>
							</Column>
							<Column hAlign="End">
								<Text text="Designation"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem press="onSelectItem" type="Active" id="idColumnListItem">
								<cells>
									<Text text="{LocalDataModel>Employeeid}"/>
									<Text text="{LocalDataModel>Employeename}"></Text>
									<Text text="{LocalDataModel>Gender}"></Text>
									<Text text="{LocalDataModel>Age}"></Text>
									<Text text="{LocalDataModel>Designation}"></Text>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>